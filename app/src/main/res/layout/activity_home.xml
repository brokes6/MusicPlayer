<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.HomeActivity">
    <LinearLayout
        android:id="@+id/mainL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:id="@+id/tabBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#FFFFFF"
        android:orientation="vertical">
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tablayoutReal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tabIndicatorColor="#FF5722"
            app:tabSelectedTextColor="#000000"
            app:tabTextColor="#A3A3A3"
            app:tabIndicatorFullWidth="false" />
    </LinearLayout>
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
        <LinearLayout
            android:id="@+id/Playback_controller"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bt_top"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingTop="@dimen/afc_10dp"
                android:paddingBottom="@dimen/afc_10dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginLeft="5dp">
                    <com.example.musicplayerdome.util.RoundImageView
                        android:id="@+id/Mimg"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        app:type="circle"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="15dp"
                    android:orientation="vertical">
<!--                    <TextView-->
<!--                        android:id="@+id/tv_custom_song_singer"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="0dp"-->
<!--                        android:layout_weight="1"-->
<!--                        android:gravity="left"-->
<!--                        android:text="音乐名称"-->
<!--                        android:maxLines="1"-->
<!--                        android:textColor="@color/black"-->
<!--                        android:textSize="18sp" />-->
                    <com.example.musicplayerdome.object.RollTextView
                        android:id="@+id/tv_custom_song_singer"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:text="音乐名称"
                        android:gravity="left"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:ellipsize="marquee"
                        android:scrollHorizontally="true"
                        android:textSize="18sp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/tv_custom_song_author"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:maxLines="1"
                        android:text="音乐作者"
                        android:textColor="@color/color_bg_loading"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.7"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/btn_custom_prev"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/afc_10dp"
                        android:layout_weight="1"
                        android:src="@mipmap/audio_pre_btn" />

                    <ImageView
                        android:id="@+id/btn_custom_play"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/afc_10dp"
                        android:layout_weight="1"
                        android:contentDescription="播放"
                        android:src="@mipmap/audio_state_play" />

                    <ImageView
                        android:id="@+id/btn_custom_next"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/afc_10dp"
                        android:layout_weight="1"
                        android:contentDescription="下一首"
                        android:src="@mipmap/audio_next_btn" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>