<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.MusicActivity">
        <!--音量控制-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:orientation="horizontal">
            <SeekBar
                android:id="@+id/act_audio_VolumeControl"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/c28"
                android:focusable="false"
                android:max="100"
                android:maxHeight="2dp"
                android:minHeight="2dp"
                android:progress="0"
                android:progressDrawable="@drawable/po_seekbar"
                android:splitTrack="false"
                android:thumb="@mipmap/audio_skbar_icon" />
        </LinearLayout>
        <!--进度-->
        <LinearLayout
            android:id="@+id/seek_bar_layId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/xpaly"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/act_audio_player_current_play_timeId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/afc_10dp"
                android:layout_marginRight="@dimen/afc_5dp"
                android:text="00:00"
                android:textColor="@color/color_33"
                android:textSize="10sp" />

            <SeekBar
                android:id="@+id/act_audio_player_audio_progressId"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/c28"
                android:focusable="false"
                android:max="100"
                android:maxHeight="2dp"
                android:minHeight="2dp"
                android:progress="0"
                android:progressDrawable="@drawable/po_seekbar"
                android:splitTrack="false"
                android:thumb="@mipmap/audio_skbar_icon" />

            <TextView
                android:id="@+id/act_audio_player_total_timeId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/afc_10dp"
                android:text="00:00"
                android:textColor="@color/color_33"
                android:textSize="10sp" />
        </LinearLayout>

        //播放按钮和列表按钮
        <LinearLayout
            android:id="@+id/xpaly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">
            <LinearLayout
                android:padding="@dimen/afc_10dp"
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
                <ImageView
                    android:layout_width="@dimen/afc_25dp"
                    android:layout_height="@dimen/afc_25dp" />
            </LinearLayout>
            <LinearLayout
                android:padding="@dimen/afc_10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
                <ImageView
                    android:id="@+id/play"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@mipmap/audio_state_pause"/>
            </LinearLayout>
            <LinearLayout
                android:padding="@dimen/afc_10dp"
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
                <ImageView
                    android:id="@+id/music_list"
                    android:layout_width="@dimen/afc_25dp"
                    android:layout_height="@dimen/afc_25dp"
                    android:src="@mipmap/audio_list"/>
            </LinearLayout>
        </LinearLayout>
        //播放按钮和列表按钮--结束
        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="111"/>
    </RelativeLayout>
</layout>