<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.MusicActivity">

        //播放按钮和列表按钮
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:padding="@dimen/afc_10dp"
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
                <ImageView
                    android:layout_width="@dimen/afc_25dp"
                    android:layout_height="@dimen/afc_25dp" />
            </LinearLayout>
            <LinearLayout
                android:padding="@dimen/afc_10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
                <ImageView
                    android:id="@+id/play"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@mipmap/audio_state_pause"/>
            </LinearLayout>
            <LinearLayout
                android:padding="@dimen/afc_10dp"
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
                <ImageView
                    android:id="@+id/music_list"
                    android:layout_width="@dimen/afc_25dp"
                    android:layout_height="@dimen/afc_25dp"
                    android:src="@mipmap/audio_list"/>
            </LinearLayout>
        </LinearLayout>
        //播放按钮和列表按钮--结束
        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="111"/>
    </LinearLayout>
</layout>