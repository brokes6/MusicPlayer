<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_toLeftOf="@+id/why"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/afc_10dp"
        android:paddingBottom="@dimen/afc_10dp"
        android:orientation="vertical">
    <TextView
        android:id="@+id/tv_custom_song_singer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingLeft="15dp"
        android:layout_weight="1"
        android:gravity="left|center"
        android:text="音乐名称"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.8"
        android:gravity="center_horizontal|left"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/btn_custom_prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/afc_10dp"
            android:src="@android:drawable/ic_media_previous" />

        <ImageView
            android:id="@+id/btn_custom_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:contentDescription="播放"
            android:src="@android:drawable/ic_media_play" />

        <ImageView

            android:id="@+id/btn_custom_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="下一首"
            android:src="@android:drawable/ic_media_next" />

<!--        <ImageView-->
<!--            android:id="@+id/btn_custom_close"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginLeft="@dimen/afc_10dp"-->
<!--            android:layout_weight="1"-->
<!--            android:contentDescription="清除"-->
<!--            android:src="@mipmap/ic_list_close" />-->
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/why"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:orientation="horizontal"
        android:layout_alignParentRight="true">
        <ImageView
            android:id="@+id/Music_logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>
    </LinearLayout>

</RelativeLayout>

