<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:paddingTop="@dimen/afc_10dp"
    android:paddingBottom="@dimen/afc_10dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/tv_custom_song_singer"
        android:layout_width="@dimen/afc_50dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/afc_10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="音乐名称"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="70dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/btn_custom_prev"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/afc_10dp"
            android:layout_weight="1"
            android:src="@android:drawable/ic_media_previous" />

        <ImageView
            android:id="@+id/btn_custom_play"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/afc_10dp"
            android:layout_weight="1"
            android:contentDescription="播放"
            android:src="@android:drawable/ic_media_play" />

        <ImageView

            android:id="@+id/btn_custom_next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/afc_10dp"
            android:layout_weight="1"
            android:contentDescription="下一首"
            android:src="@android:drawable/ic_media_next" />

<!--        <ImageView-->
<!--            android:id="@+id/btn_custom_close"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginLeft="@dimen/afc_10dp"-->
<!--            android:layout_weight="1"-->
<!--            android:contentDescription="清除"-->
<!--            android:src="@mipmap/ic_list_close" />-->
    </LinearLayout>

    <TextView
        android:id="@+id/tv_custom_song_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/afc_10dp"
        android:text="content"
        android:textSize="12sp"
        android:visibility="gone" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="right|center">
        <ImageView
            android:id="@+id/Music_logo"
            android:layout_width="70dp"
            android:layout_height="match_parent" />
    </LinearLayout>

</RelativeLayout>

