<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- popupwindow的动画效果-->
    <style name="popupAnimation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/timepicker_anim_enter_bottom</item>
        <item name="android:windowExitAnimation">@anim/timepicker_anim_out_bottom</item>
    </style>

    <style name="AppThemes" parent="XUITheme.Phone">
        <!-- 自定义自己的主题样式 -->
        <item name="colorPrimary">@color/menu_white_normal</item>
        <item name="colorPrimaryDark">@color/menu_white_normal</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 自定义dialog-->
    <style name="my_dialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="mystyle" parent="android:Animation">
<!--        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>  //进入时的动画-->
<!--        <item name="android:windowExitAnimation">@anim/dialog_exit</item>    //退出时的动画-->
        <item name="android:windowEnterAnimation">@anim/timepicker_anim_enter_bottom</item>
        <item name="android:windowExitAnimation">@anim/timepicker_anim_out_bottom</item>
    </style>
    <style name="MyDialog" parent="@android:style/Theme.Holo.Dialog">
        <!-- 是否有边框 -->
        <item name="android:windowFrame">@null</item>
        <!--是否在悬浮Activity之上  -->
        <item name="android:windowIsFloating">true</item>
        <!--标题  -->
        <item name="android:windowNoTitle">true</item>
        <!--阴影  -->
        <item name="android:windowIsTranslucent">true</item><!--半透明-->
        <!-- 进入和退出的动画 -->
        <item name="android:windowAnimationStyle">@style/mystyle</item>

        <!-- 点外边可以消失  -->
        <item name="android:windowCloseOnTouchOutside">true</item>

    </style>
</resources>
